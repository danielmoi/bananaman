const program = require('commander');
const read = require('read');

const isBananaman = require('..');

const checkInput = (err, input) => {
  const isTrue = isBananaman(input);
  if (isTrue) {
    console.log(`>> 🍌 🍌  ${input} is Banana Man!!!  🍌 🍌 🍌 🍌`);
    return;
  }
  if (!input) {
    console.log('NOT GIVING AN ANSWER???');
    return;
  }
  console.log(`>> ⛔ ⛔  ${input} is not Banana Man`);
};

read({ prompt: '>> 🍌 🍌  Who this?' }, checkInput);
